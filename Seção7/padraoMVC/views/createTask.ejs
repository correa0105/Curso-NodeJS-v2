<div class="createTask">
    <form action="/tasks/add" method="POST" class="task-container">
        <h1>Criar Tarefa</h1>
        <div class="form-cotainer">
            <label for="title">Titulo</label>
            <input type="text" name="title" placeholder="Titulo da atividade">
        </div>
        <div class="form-cotainer">
            <label for="description">Descrição</label>
            <textarea name="description" id="" cols="30" rows="10" placeholder="Descreva a atividade"></textarea>
        </div>
        <input type="submit" id="submit" value="Registrar">
    </form>
</div>

