<%- include("includes/head"); %>
<%- include("partials/header"); %>

<div class="createTask">
    <form action="/tasks/edit" method="POST" class="task-container">
        <h1>Editando Tarefa:</h1>
        <span><%= task.title %></span>
        <input type="hidden" name="id" value="<%= task.id %>">
        <div class="form-cotainer">
            <label for="title">Titulo</label>
            <input type="text" name="title" placeholder="Titulo da atividade" value="<%= task.title %>">
        </div>
        <div class="form-cotainer">
            <label for="description">Descrição</label>
            <textarea name="description" id="" cols="30" rows="10" placeholder="Descreva a atividade"><%= task.description %></textarea>
        </div>
        <input type="submit" id="submit" value="Registrar">
    </form>
</div>

<%- include("includes/footer"); %>