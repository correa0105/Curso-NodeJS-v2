<%- include("includes/head"); %>
<%- include("partials/header"); %>

<h1>Livro Selecionado</h1>

<div class="books-container">
    <table>
        <tr>
            <th>Id</th>
            <th>Livro</th>
            <th>Quantidade de Paginas</th>
        </tr>
        <tr>
            <td><%= book.id %></td>
            <td><%= book.title %></td>
            <td><%= book.pagesqty %></td>
        </tr>
    </table>
    <table>
        <tr>
            <td><a href="/books/edit/<%= book.id %>">Editar</a></td>
            <td>
                <form class="remove_book" action="/books/remove/<%= book.id %>" method="POST">
                    <input type="submit" value="Remover">
                </form>
            </td>
        </tr>
    </table>
</div>

<%- include("includes/footer"); %>